<UserControl x:Class="JewelryAuctionApplicationGUI.Views.JewelryPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:components="clr-namespace:JewelryAuctionApplicationGUI.Components"
             xmlns:local="clr-namespace:JewelryAuctionApplicationGUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="900"
             Background="WhiteSmoke">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <components:NavigationBar Grid.Row="0" DataContext="{Binding NavigationBarViewModel}"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Image Source="{Binding JewelryListing.DisplayedImage}" Height="400" Width="400"
                       Margin="10 40 0 0"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="{Binding JewelryListing.Jewelry.JewelryName}"
                           FontWeight="Bold"
                           FontSize="24"
                           TextWrapping="Wrap"
                           Margin="0 35 0 5"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical"
                                Width="225"
                                >
                        <Border BorderBrush="DimGray"
                                BorderThickness="0 0 0 0.5"
                                Margin="0 0 20 0">
                            <StackPanel Orientation="Horizontal"
                                        Margin="0 5 0 5">
                                <TextBlock Text="Category: "
                                       FontSize="16"
                                       FontWeight="Medium"
                                       />
                                <TextBlock Text="{Binding JewelryListing.Jewelry.JewelryCategory}"
                                           FontSize="16"
                                           FontWeight="Regular"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        <Border Height="250">
                            <StackPanel Orientation="Vertical"
                                        Margin="0 5 0 0">
                                <TextBlock Text="Description:"
                                       FontWeight="Medium"/>
                                <ScrollViewer>
                                    <TextBlock Text="Input here"
                                           FontWeight="Regular"
                                           TextWrapping="Wrap"
                                           />
                                </ScrollViewer>

                            </StackPanel>
                        </Border>

                        <Border BorderBrush="DimGray"
                                BorderThickness="0 0.5 0 0"
                                Margin="0 0 20 0">
                            <StackPanel Orientation="Horizontal"
                                        Margin="0 5 0 0">
                                <TextBlock Text="Condition: "
                                       FontSize="16"
                                       FontWeight="Medium"
                                       />
                                <TextBlock Text="{Binding JewelryListing.Jewelry.Condition}"
                                           FontSize="16"                                          
                                           FontWeight="Regular"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"
                                Width="225">
                        <Border Margin="0 0 30 0"
                                Height="auto"
                                Background="LightGray"
                                BorderBrush="DimGray"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Current Price (1 bid)"
                                           FontWeight="Regular"
                                           FontSize="16"
                                           Margin="10 5 0 0"/>
                                <TextBlock Text="{Binding JewelryListing.Jewelry.StartingPrice, StringFormat={}{0:C}}"
                                           FontWeight="DemiBold"
                                           FontSize="22"
                                           Margin="10 0 0 0"/>
                                
                                <Button Command="{Binding PlaceBidCommand}"
                                        Background="Teal"
                                        VerticalAlignment="Center"
                                        Margin="10 5 10 0">
                                    <TextBlock Text="PLACE BID"
                                               FontWeight="Bold"
                                               Margin="2"
                                               Foreground="White"/>
                                </Button>
                                <TextBlock Text="Ends in 21h"
                                           Margin="10 0 10 5"
                                           FontSize="12"
                                           FontWeight="Light"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
